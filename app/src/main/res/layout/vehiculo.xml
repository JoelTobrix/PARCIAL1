<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Título Principal -->
    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo ingreso de vehículo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Placa del vehículo -->
    <TextView
        android:id="@+id/text_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa del vehículo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textplaca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese la placa"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/text_title3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Modelo del vehículo -->
    <TextView
        android:id="@+id/text_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo del vehículo"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textplaca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/textmodelo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese el modelo"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/text_title4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Hora de ingreso -->
    <TextView
        android:id="@+id/text_title7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programe hora de ingreso"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textmodelo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/texthora1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese la hora de ingreso"
        android:inputType="time"
        app:layout_constraintTop_toBottomOf="@id/text_title7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

    <!-- Hora de salida -->
    <TextView
        android:id="@+id/text_title8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programe hora de salida"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/texthora1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/texthora2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ingrese la hora de salida"
        android:inputType="time"
        app:layout_constraintTop_toBottomOf="@id/text_title8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
